<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="
                http://www.springframework.org/schema/security 
                http://www.springframework.org/schema/security/spring-security.xsd
                http://www.springframework.org/schema/beans 
                http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Enable method security annotations -->
    <beans:import resource="application-context.xml" />

    <!-- Authentication Manager -->
    <http auto-config="true" use-expressions="true">
        <intercept-url pattern="/api/auth/**" access="permitAll" />
        <intercept-url pattern="/api/**" access="isAuthenticated()" />
        <custom-filter ref="jwtAuthenticationFilter" position="FORM_LOGIN_FILTER"/>
        <csrf disabled="true" />
    </http>

    <beans:bean id="passwordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder" />

    <beans:bean id="userDetailsService" class="com.hdims.hdims.security.UserDetailsServiceImpl" />

    <beans:bean id="authenticationProvider" class="org.springframework.security.authentication.dao.DaoAuthenticationProvider">
        <property name="userDetailsService" ref="userDetailsService" />
        <property name="passwordEncoder" ref="passwordEncoder" />
    </beans:bean>

    <authentication-manager>
        <authentication-provider ref="authenticationProvider" />
    </authentication-manager>

    <beans:bean id="jwtAuthenticationFilter" class="com.hdims.hdims.security.AuthTokenFilter" />
</beans:beans>
